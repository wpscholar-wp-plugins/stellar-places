{
  "name": "stellar-places",
  "description": "An intuitive WordPress plugin for easily creating, managing and displaying locations using Google Maps.",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wpscholar/stellar-places.git"
  },
  "author": "Micah Wood <micah@wpscholar.com> (https://wpscholar.com)",
  "bugs": {
    "url": "https://github.com/wpscholar/stellar-places/issues"
  },
  "homepage": "https://github.com/wpscholar/stellar-places",
  "scripts": {
    "build": "webpack -p",
    "i18n": "wpi18n addtextdomain && wpi18n makepot",
    "lint": "yamllint **/*.yml --ignore=node_modules/**",
    "start": "webpack --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@wordpress/babel-plugin-makepot": "^3.5.0",
    "@wordpress/babel-preset-default": "^4.12.1",
    "@wordpress/browserslist-config": "^2.6.0",
    "autoprefixer": "^9.7.6",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "css-loader": "^2.1.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.5",
    "mini-css-extract-plugin": "^0.5.0",
    "node-wp-i18n": "^1.2.3",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.3.1",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "yaml-lint": "^1.2.4"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.yml": [
      "yamllint --ignore=node_modules/**"
    ],
    "**/*.php": [
      "vendor/bin/phpcs --standard=WPScholar -s"
    ]
  }
}
